<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>FileController</servlet-name>
    <servlet-class>com.mykyta.restapi.rest.FileRestControllerV1</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.mykyta.restapi.rest.UserRestControllerV1</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>EventController</servlet-name>
    <servlet-class>com.mykyta.restapi.rest.EventRestControllerV1</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>FileController</servlet-name>
    <url-pattern>/api/v1/files/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/api/v1/users/*</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>EventController</servlet-name>
    <url-pattern>/api/v1/events/*</url-pattern>
  </servlet-mapping>

</web-app>
